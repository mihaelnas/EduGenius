
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // This is the single source of truth for admin role verification.
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // --- Admin-only collections ---
    match /pending_users/{pendingUserId} {
      allow read, create, update, delete: if isAdmin();
    }
    
    match /classes/{classId} {
      // Admins can do anything
      allow read, list, create, update, delete: if isAdmin();
    }
    
    match /subjects/{subjectId} {
      // Admins can do anything
      allow read, list, create, update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      // Allow creation for self-activation, role is secured by server-side action
      allow create: if isSignedIn();
      // Allow update for own profile if not changing role, or if admin
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /courses/{courseId} {
      // Any signed-in user (student or teacher) can view courses.
      allow get, list: if isSignedIn();
      // Admins and assigned teachers can create/edit/delete
      allow create, update, delete: if isAdmin() || isTeacherForCourse() || isExistingTeacherForCourse();
    }

    match /schedule/{eventId} {
      // Any signed-in user can view schedule
      allow get, list: if isSignedIn();
      // Admins or the assigned teacher can manage events
      allow create, update, delete: if isAdmin() || isTeacherForEvent() || isExistingTeacherForEvent();
    }
  }
}
