
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // --- Admin-managed collections ---
    match /pending_users/{pendingUserId} {
      allow read, create, update, delete: if isAdmin();
    }
    match /users/{userId} {
      // An admin can read/list all users. A user can read their own document.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      // Only admins can create, update, or delete users through the admin panel
      allow create, update, delete: if isAdmin();
    }
    match /classes/{classId} {
      allow get, list, create, update, delete: if isAdmin();
    }
    match /subjects/{subjectId} {
      // Admins can manage everything. Teachers can only update/delete subjects they are assigned to.
      allow get, list, create: if isAdmin();
      allow update: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow delete: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
    }
    // --- End Admin-managed ---

    // --- Teacher-managed collections ---
    match /courses/{courseId} {
      // Any signed-in user (student or teacher) can view courses.
      allow get, list: if isSignedIn();
      // A teacher can create a course if they are the assigned teacher for that subject.
      allow create: if isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId);
      // A teacher can update or delete a course they created.
      allow update, delete: if isExistingTeacherForCourse();
    }
    
    match /schedule/{eventId} {
       // Any signed-in user (student or teacher) can view schedule events.
      allow get, list: if isSignedIn();
      // A teacher can create an event.
      allow create: if isTeacherForEvent();
      // A teacher can update or delete an event they created.
      allow update, delete: if isExistingTeacherForEvent();
    }
    // --- End Teacher-managed ---
  }
}
