
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // Only admins (via server flow) can write. All admins can read.
    match /pending_users/{pendingUserId} {
      allow read: if isAdmin();
      allow create, update, delete: if false; // IMPORTANT: Prevent client-side writes
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn(); // User can create their own profile upon registration
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role); // Owner can update, but not change role
      allow delete: if false; // Only via secure flow
    }
    
    // Admins (via server flow) can write. All signed-in users can read.
    match /classes/{classId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false; // IMPORTANT: Prevent client-side writes
    }

    // Admins (via server flow) can create/delete. All signed-in users can read. Admins or assigned teachers can update.
    match /subjects/{subjectId} {
      allow get, list: if isSignedIn();
      allow update: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin(); // Teacher can be assigned by admin
      allow create, delete: if false; // IMPORTANT: Prevent client-side writes
    }
    
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create: if (isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId)) || isAdmin();
      allow update: if isExistingTeacherForCourse() || isAdmin();
      allow delete: if isExistingTeacherForCourse() || isAdmin();
    }
    
     match /class_students/{classStudentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    match /class_teachers/{classTeacherId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForEvent() || isAdmin();
      allow update: if isExistingTeacherForEvent() || isAdmin();
      allow delete: if isExistingTeacherForEvent() || isAdmin();
    }
  }
}
