
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Un utilisateur est admin si son document utilisateur a le rôle 'admin'.
      // La permission de lire ce document est gérée dans la règle `match /users/{userId}`.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // Collection pour les utilisateurs en attente
    match /pending_users/{pendingUserId} {
      allow get: if true; // Tout le monde peut vérifier un utilisateur en attente spécifique
      allow list: if isAdmin(); // Seuls les admins peuvent lister tous les utilisateurs en attente
      allow create: if isAdmin(); // Seuls les admins peuvent pré-inscrire des utilisateurs
      allow delete: if isSignedIn(); // Le processus d'inscription supprimera ceci
      allow update: if false; // Ne doit pas être mis à jour
    }

    match /users/{userId} {
      // Les utilisateurs peuvent lire leur propre profil. Les admins peuvent lire n'importe quel profil.
      allow get: if isOwner(userId) || isAdmin();
      
      // Seuls les admins peuvent lister les utilisateurs.
      allow list: if isAdmin();

      // Autoriser la création d'utilisateur si l'ID utilisateur de la requête correspond à l'ID du document créé.
      // Cela permet à un nouvel utilisateur de créer son propre profil.
      allow create: if isOwner(userId);

      // Le propriétaire peut mettre à jour son profil, sauf son rôle.
      // Un admin peut mettre à jour n'importe quel profil, y compris le rôle.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      
      // Les admins peuvent supprimer des utilisateurs
      allow delete: if isAdmin();
    }
    
    match /classes/{classId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      // Autoriser les mises à jour de classe (comme l'ajout d'un étudiant) par les admins
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /subjects/{subjectId} {
      allow get, list: if isSignedIn();
      allow create: if (isSignedIn() && request.resource.data.teacherId == request.auth.uid) || isAdmin();
      allow update: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow delete: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
    }
    
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create: if (isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId)) || isAdmin();
      allow update: if isExistingTeacherForCourse() || isAdmin();
      allow delete: if isExistingTeacherForCourse() || isAdmin();
    }
    
     match /class_students/{classStudentId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /class_teachers/{classTeacherId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForEvent() || isAdmin();
      allow update: if isExistingTeacherForEvent() || isAdmin();
      delete: if isExistingTeacherForEvent() || isAdmin();
    }
  }
}
