
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // --- Admin-only managed collections ---
    // All client-side writes are forbidden. They must go through secure server actions.
    match /pending_users/{pendingUserId} {
      allow read, write: if false;
    }

    match /users/{userId} {
      // A user can read their own document. Admin reads go through server actions.
      allow get: if isOwner(userId);
      // Listing and writing is forbidden from the client.
      allow list, write: if false; 
    }
    
    match /classes/{classId} {
      // Anyone signed-in can read class data (e.g., for schedules, classmate lists).
      allow get, list: if isSignedIn();
      // All mutations must go through server actions.
      allow write: if false;
    }

    match /subjects/{subjectId} {
      // Anyone signed-in can read subject data (e.g., for course lists).
      allow get, list: if isSignedIn();
       // All mutations must go through server actions.
      allow write: if false;
    }
    // --- End Admin-only ---


    // --- Teacher-managed collections ---
    match /courses/{courseId} {
      // Any signed-in user (student or teacher) can view courses.
      allow get, list: if isSignedIn();
      // A teacher can create a course if they are the assigned teacher for that subject.
      allow create: if isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId);
      // A teacher can update or delete a course they created.
      allow update, delete: if isExistingTeacherForCourse();
    }
    
    match /schedule/{eventId} {
       // Any signed-in user (student or teacher) can view schedule events.
      allow get, list: if isSignedIn();
      // A teacher can create an event.
      allow create: if isTeacherForEvent();
      // A teacher can update or delete an event they created.
      allow update, delete: if isExistingTeacherForEvent();
    }
    // --- End Teacher-managed ---
  }
}
