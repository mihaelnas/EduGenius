
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    match /pending_users/{pendingUserId} {
      // Les opérations doivent passer par des flows sécurisés
      allow read, write: if false;
    }

    match /users/{userId} {
      // Tout utilisateur connecté peut lire les profils
      allow get, list: if isSignedIn();
      // L'utilisateur ne peut créer que son propre document
      allow create: if isOwner(userId);
      // Seul le propriétaire peut mettre à jour son rôle (et il ne peut pas le changer)
      // Les autres mises à jour doivent passer par des flows sécurisés
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      // La suppression doit passer par un flow sécurisé
      allow delete: if false; 
    }
    
    match /classes/{classId} {
      // Tout utilisateur connecté peut lire les informations des classes
      allow get, list: if isSignedIn();
      // Les écritures doivent passer par des flows sécurisés
      allow write: if false;
    }

    match /subjects/{subjectId} {
      // Tout utilisateur connecté peut lire les informations des matières
      allow get, list: if isSignedIn();
      // La mise à jour du teacherId est autorisée pour le professeur concerné
      allow update: if isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
      // Les créations/suppressions doivent passer par des flows sécurisés
      allow create, delete: if false;
    }
    
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create: if (isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId));
      allow update: if isExistingTeacherForCourse();
      allow delete: if isExistingTeacherForCourse();
    }
    
     match /class_students/{classStudentId} {
      allow read, write: if false;
    }

    match /class_teachers/{classTeacherId} {
      allow read, write: if false;
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForEvent();
      allow update: if isExistingTeacherForEvent();
      allow delete: if isExistingTeacherForEvent();
    }
  }
}
