
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    // --- RÈGLES ADMIN ---
    // Les administrateurs ont un accès complet en lecture et en écriture.
    match /pending_users/{docId} {
      allow read, write: if isAdmin();
    }
    match /classes/{docId} {
      allow read, write: if isAdmin();
      allow list, get: if isSignedIn(); // Les autres utilisateurs peuvent lire
    }
    match /subjects/{docId} {
      allow read, write: if isAdmin();
      allow list, get: if isSignedIn(); // Les autres utilisateurs peuvent lire
    }

    // --- RÈGLES UTILISATEURS ---
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      // L'utilisateur peut créer son propre document lors de l'activation
      allow create: if isSignedIn();
      // L'admin peut tout mettre à jour, l'utilisateur ne peut pas changer son rôle
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      // Seul l'admin peut supprimer
      allow delete: if isAdmin();
    }

    // --- RÈGLES ENSEIGNANTS & ÉTUDIANTS ---
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isExistingTeacherForCourse() || isTeacherForCourse() || isAdmin();
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isExistingTeacherForEvent() || isTeacherForEvent() || isAdmin();
    }
  }
}
