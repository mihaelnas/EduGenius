
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    match /pending_users/{pendingUserId} {
      // All write operations must go through secure server-side flows.
      allow read, write: if false;
    }

    match /users/{userId} {
      // Any signed-in user can read public user profiles.
      allow get, list: if isSignedIn();
      // Creation is handled by the activateAccount flow. Updates/Deletes are admin-only via flows.
      allow write: if false;
    }
    
    match /classes/{classId} {
      // Any signed-in user can read class information.
      allow get, list: if isSignedIn();
      // All write operations must go through secure server-side flows.
      allow write: if false;
    }

    match /subjects/{subjectId} {
      // Any signed-in user can read subject information.
      allow get, list: if isSignedIn();
      // All write operations must go through secure server-side flows.
      allow write: if false;
    }
    
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId);
      allow update: if isExistingTeacherForCourse();
      allow delete: if isExistingTeacherForCourse();
    }
    
    match /class_students/{classStudentId} {
      // Deprecated or unused collection, lock down access.
      allow read, write: if false;
    }

    match /class_teachers/{classTeacherId} {
      // Deprecated or unused collection, lock down access.
      allow read, write: if false;
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForEvent();
      allow update: if isExistingTeacherForEvent();
      allow delete: if isExistingTeacherForEvent();
    }
  }
}
