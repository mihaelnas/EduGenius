
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    match /pending_users/{docId} {
      // Seuls les admins peuvent gérer les utilisateurs en attente.
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      // LECTURE : Un utilisateur peut voir son propre profil, les admins peuvent tout voir.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // ECRITURE : Un utilisateur peut se créer. Un admin peut tout faire.
      // Un utilisateur peut mettre à jour son propre profil mais pas son rôle.
      allow create: if isSignedIn();
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /classes/{classId} {
      // LECTURE : Tous les utilisateurs connectés peuvent voir les classes.
      allow read: if isSignedIn();
      // ECRITURE : Seuls les admins peuvent créer, modifier ou supprimer des classes.
      allow write: if isAdmin();
    }
    
    match /subjects/{subjectId} {
      // LECTURE : Tous les utilisateurs connectés peuvent voir les matières.
      allow read: if isSignedIn();
      // ECRITURE : Seuls les admins peuvent créer, modifier ou supprimer des matières.
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      // LECTURE : Tous les utilisateurs connectés peuvent lire les cours.
      allow read: if isSignedIn();
      // ECRITURE : Seuls l'enseignant du cours ou un admin peuvent écrire.
      allow write: if isTeacherForCourse() || isExistingTeacherForCourse() || isAdmin();
    }

    match /schedule/{eventId} {
      // LECTURE : Tous les utilisateurs connectés peuvent voir l'emploi du temps.
      allow read: if isSignedIn();
      // ECRITURE : Seuls l'enseignant de l'événement ou un admin peuvent écrire.
      allow write: if isTeacherForEvent() || isExistingTeacherForEvent() || isAdmin();
    }
  }
}
