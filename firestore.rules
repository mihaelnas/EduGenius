
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // isAdmin now checks for existence in the dedicated roles_admin collection
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isTeacherForCourse() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForCourse() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }
    
    function isTeacherForSubject(subjectId) {
      return isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

    function isTeacherForEvent() {
      return isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    function isExistingTeacherForEvent() {
      return isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid;
    }

    match /users/{userId} {
      // Allow anyone to read an inactive user profile (needed for registration check).
      // Active profiles can only be read by signed-in users.
      allow read: if (resource.data.status == 'inactive') || isSignedIn();

      // Allow user creation if the user ID of the request matches the document ID being created.
      // This is crucial for the signup process.
      allow create: if request.auth.uid == userId;
      // Allow updates by owner or admin
      allow update: if isExistingOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // New collection for admin roles
    match /roles_admin/{userId} {
       // Only other admins can see, create, or delete admin roles
       allow get: if isAdmin();
       allow list: if false; // Don't allow listing all admins
       allow create, delete: if isAdmin();
       allow update: if false; // Roles are either present or not
    }

    match /classes/{classId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      // Allow class updates (like adding a student) by admins
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    match /subjects/{subjectId} {
      allow get, list: if isSignedIn();
      allow create: if (isSignedIn() && request.resource.data.teacherId == request.auth.uid) || isAdmin();
      allow update: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow delete: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
    }
    
    match /courses/{courseId} {
      allow get, list: if isSignedIn();
      allow create: if (isTeacherForCourse() && isTeacherForSubject(request.resource.data.subjectId)) || isAdmin();
      allow update: if isExistingTeacherForCourse() || isAdmin();
      allow delete: if isExistingTeacherForCourse() || isAdmin();
    }
    
     match /class_students/{classStudentId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    match /class_teachers/{classTeacherId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    match /schedule/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isTeacherForEvent() || isAdmin();
      allow update: if isExistingTeacherForEvent() || isAdmin();
      delete: if isExistingTeacherForEvent() || isAdmin();
    }
  }
}
